<%- include("partials/header") %>

    <div class="container mt-5">
        <h2>Create a Blog Post</h2>
        <form action="/view" method="POST">
            <input class="form-control mb-3" type="text" name="title" placeholder="Post Title" required>
            <input class="form-control mb-3" type="text" name="author" placeholder="Author Name" required>
            <textarea class="form-control mb-3" name="content" rows="5" placeholder="Write your post here..."
                required></textarea>
            <button type="submit" class="btn btn-success">Publish</button>
        </form>
    </div>

    <%- include("partials/footer") %>